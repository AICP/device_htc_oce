# in addition to ioctl commands granted to domain allow system_server to use:
allowxperm system_server self:udp_socket ioctl priv_sock_ioctls;

# At a minimum, used for GPS (b/32290392)
allow system_server self:socket ioctl; # create already in core policy
allowxperm system_server self:socket ioctl msm_sock_ipc_ioctls;

# /dev/uhid
allow system_server uhid_device:chr_file rw_file_perms;

# hwservice over hwbinder
binder_call(system_server, hal_camera_default)
binder_call(system_server, location)
binder_call(system_server, thermal-engine)

# rpm
r_dir_file(system_server, debugfs_rpm)

userdebug_or_eng(`
  allow system_server diag_device:chr_file rw_file_perms;
')

allow system_server debugfs_ion:dir r_dir_perms;
allow system_server debugfs_kgsl:dir r_dir_perms;

allow system_server thermal_service:service_manager find;

dontaudit system_server dalvikcache_data_file:file execute;

allow system_server audioserver:file { rw_file_perms };
allow system_server hal_audio_default:file { rw_file_perms };

allow system_server cameraserver:fifo_file { rw_file_perms };

allow system_server proc_stat:file r_file_perms;
allow system_server user_profile_data_file:dir r_file_perms;

# For gestures
allow system_server sysfs_sensors:file w_file_perms;
